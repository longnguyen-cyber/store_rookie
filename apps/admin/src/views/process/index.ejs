<table class="w-full">
  <thead class="bg-blue-600">
    <tr>
      <th class="border border-slate-700">STT</th>
      <th class="border border-slate-700">book_id</th>
      <th class="border border-slate-700">user_id</th>
      <th class="border border-slate-700">rating</th>
      <th class="border border-slate-700">comment</th>
      <th class="border border-slate-700">Action</th>
    </tr>
  </thead>
  <tbody>
    <% data.forEach(function(item, index) { %>
    <tr>
      <td class="border border-slate-700"><%= index + 1 %></td>
      <td class="border border-slate-700"><%= item.book_id %></td>
      <td class="border border-slate-700"><%= item.user_id %></td>
      <td class="border border-slate-700"><%= item.rating %></td>
      <td class="border border-slate-700"><%= item.comment %></td>
      <td class="border border-slate-700">
        <a href="edit/review/<%= item.id %>" class="text-blue-500 hover:text-blue-800">Edit</a>
        <form action="delete/review/<%= item.id %>" method="POST" class="inline">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="text-red-500 hover:text-red-800">Delete</button>
        </form>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>