<table class="w-full">
  <thead class="bg-blue-600">
    <tr>
      <th class="border border-slate-700">STT</th>
      <th class="border border-slate-700">Name</th>
      <th class="border border-slate-700">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
    <tr>
      <td class="border border-slate-700">{{increment @index}}</td>
      <td class="border border-slate-700">{{this.name}}</td>
      <td class="border border-slate-700">{{this.action}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>