{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api-gateway",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "admin": {
      "type": "application",
      "root": "apps/admin",
      "entryFile": "main",
      "sourceRoot": "apps/admin/src",
      "compilerOptions": {
        "tsConfigPath": "apps/admin/tsconfig.app.json",
        "assets": [
          {
            "include": "**/*.ejs",
            "watchAssets": true
          }
        ]
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "categories": {
      "type": "application",
      "root": "apps/categories",
      "entryFile": "main",
      "sourceRoot": "apps/categories/src",
      "compilerOptions": {
        "tsConfigPath": "apps/categories/tsconfig.app.json"
      }
    },
    "books": {
      "type": "application",
      "root": "apps/books",
      "entryFile": "main",
      "sourceRoot": "apps/books/src",
      "compilerOptions": {
        "tsConfigPath": "apps/books/tsconfig.app.json"
      }
    },
    "promotions": {
      "type": "application",
      "root": "apps/promotions",
      "entryFile": "main",
      "sourceRoot": "apps/promotions/src",
      "compilerOptions": {
        "tsConfigPath": "apps/promotions/tsconfig.app.json"
      }
    },
    "reviews": {
      "type": "application",
      "root": "apps/reviews",
      "entryFile": "main",
      "sourceRoot": "apps/reviews/src",
      "compilerOptions": {
        "tsConfigPath": "apps/reviews/tsconfig.app.json"
      }
    },
    "process": {
      "type": "application",
      "root": "apps/process",
      "entryFile": "main",
      "sourceRoot": "apps/process/src",
      "compilerOptions": {
        "tsConfigPath": "apps/process/tsconfig.app.json"
      }
    },
    "author": {
      "type": "application",
      "root": "apps/author",
      "entryFile": "main",
      "sourceRoot": "apps/author/src",
      "compilerOptions": {
        "tsConfigPath": "apps/author/tsconfig.app.json"
      }
    },
    "publisher": {
      "type": "application",
      "root": "apps/publisher",
      "entryFile": "main",
      "sourceRoot": "apps/publisher/src",
      "compilerOptions": {
        "tsConfigPath": "apps/publisher/tsconfig.app.json"
      }
    }
  }
}
